/**
 * Menu Master Admin Styles - Modern Dark UI Design
 * Inspired by modern image hosting services
 */

/* Reset and Base Styles */
* {
    box-sizing: border-box;
}

/* CSS Variables for Modern Dark Theme */
:root {
    /* Primary Colors */
    --mm-primary: #4f46e5;
    --mm-primary-hover: #4338ca;
    --mm-primary-light: #6366f1;
    --mm-success: #10b981;
    --mm-warning: #f59e0b;
    --mm-danger: #ef4444;
    --mm-info: #3b82f6;
    
    /* Dark Theme Colors */
    --mm-bg-primary: #1e293b;
    --mm-bg-secondary: #0f172a;
    --mm-bg-tertiary: #334155;
    --mm-bg-card: #1e293b;
    --mm-bg-elevated: #2d3748;
    --mm-bg-input: #374151;
    --mm-bg-hover: #475569;
    
    /* Text Colors */
    --mm-text-primary: #f1f5f9;
    --mm-text-secondary: #cbd5e1;
    --mm-text-muted: #94a3b8;
    --mm-text-inverse: #1e293b;
    
    /* Border Colors */
    --mm-border: #475569;
    --mm-border-light: #64748b;
    --mm-border-focus: #4f46e5;
    
    /* Shadows */
    --mm-shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.3);
    --mm-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.4), 0 2px 4px -2px rgb(0 0 0 / 0.4);
    --mm-shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.5), 0 4px 6px -4px rgb(0 0 0 / 0.5);
    --mm-shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.6), 0 8px 10px -6px rgb(0 0 0 / 0.6);
    
    /* Gradients */
    --mm-gradient-primary: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
    --mm-gradient-success: linear-gradient(135deg, #10b981 0%, #059669 100%);
    --mm-gradient-warning: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    --mm-gradient-danger: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    --mm-gradient-card: linear-gradient(145deg, #1e293b 0%, #334155 100%);
    
    /* Border Radius */
    --mm-radius-sm: 0.375rem;
    --mm-radius: 0.5rem;
    --mm-radius-lg: 0.75rem;
    --mm-radius-xl: 1rem;
    
    /* Transitions */
    --mm-transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    --mm-transition-slow: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Light Theme Override */
body.menu-master-light {
    --mm-bg-primary: #ffffff;
    --mm-bg-secondary: #f8fafc;
    --mm-bg-tertiary: #f1f5f9;
    --mm-bg-card: #ffffff;
    --mm-bg-elevated: #f8fafc;
    --mm-bg-input: #ffffff;
    --mm-bg-hover: #f1f5f9;
    
    --mm-text-primary: #1e293b;
    --mm-text-secondary: #475569;
    --mm-text-muted: #64748b;
    --mm-text-inverse: #ffffff;
    
    --mm-border: #e2e8f0;
    --mm-border-light: #f1f5f9;
    
    --mm-shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --mm-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --mm-shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --mm-shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    
    --mm-gradient-card: linear-gradient(145deg, #ffffff 0%, #f8fafc 100%);
}

/* WordPress Integration */
.menu-master-wrap {
    background: var(--mm-bg-secondary);
    min-height: calc(100vh - 32px);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    color: var(--mm-text-primary);
    padding: 0;
}

/* Header */
.menu-master-header {
    background: var(--mm-gradient-card);
    border-bottom: 1px solid var(--mm-border);
    padding: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: var(--mm-shadow);
    margin: -20px -20px 2rem -20px;
    position: relative;
    overflow: hidden;
}

.menu-master-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--mm-gradient-primary);
    opacity: 0.05;
    z-index: 0;
}

.menu-master-header > * {
    position: relative;
    z-index: 1;
}

.menu-master-header h1 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--mm-text-primary);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-shadow: 0 2px 4px rgb(0 0 0 / 0.1);
}

.header-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.header-content p {
    margin: 0;
    color: var(--mm-text-muted);
    font-size: 0.875rem;
}

.header-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
}

/* Modern Theme Switch */
.theme-switch {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: var(--mm-bg-elevated);
    padding: 0.5rem 1rem;
    border-radius: var(--mm-radius-lg);
    border: 1px solid var(--mm-border);
    box-shadow: var(--mm-shadow-sm);
}

.theme-switch input[type="checkbox"] {
    appearance: none;
    width: 3.5rem;
    height: 2rem;
    background: var(--mm-bg-tertiary);
    border-radius: 9999px;
    position: relative;
    cursor: pointer;
    transition: var(--mm-transition);
    border: 2px solid var(--mm-border);
    box-shadow: inset 0 2px 4px rgb(0 0 0 / 0.1);
}

.theme-switch input[type="checkbox"]:checked {
    background: var(--mm-gradient-primary);
    border-color: var(--mm-primary);
}

.theme-switch input[type="checkbox"]::before {
    content: '';
    position: absolute;
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 50%;
    background: white;
    top: 0.125rem;
    left: 0.125rem;
    transition: var(--mm-transition);
    box-shadow: var(--mm-shadow);
}

.theme-switch input[type="checkbox"]:checked::before {
    transform: translateX(1.5rem);
}

.theme-switch-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--mm-text-secondary);
    user-select: none;
}

/* Navigation Tabs */
.menu-master-nav {
    margin-bottom: 2rem;
}

.nav-tabs {
    display: flex;
    gap: 0.5rem;
    margin: 0;
    list-style: none;
    padding: 0.5rem;
    background: var(--mm-bg-card);
    border-radius: var(--mm-radius-lg);
    box-shadow: var(--mm-shadow);
    border: 1px solid var(--mm-border);
}

.nav-tab {
    padding: 1rem 1.5rem;
    background: transparent;
    border: none;
    border-radius: var(--mm-radius);
    color: var(--mm-text-secondary);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    transition: var(--mm-transition);
    cursor: pointer;
    white-space: nowrap;
    position: relative;
    overflow: hidden;
}

.nav-tab::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--mm-gradient-primary);
    opacity: 0;
    transition: var(--mm-transition);
    z-index: 0;
}

.nav-tab > * {
    position: relative;
    z-index: 1;
}

.nav-tab:hover {
    color: var(--mm-text-primary);
    transform: translateY(-1px);
}

.nav-tab:hover::before {
    opacity: 0.1;
}

.nav-tab.nav-tab-active {
    color: white;
    background: var(--mm-gradient-primary);
    box-shadow: var(--mm-shadow);
    transform: translateY(-1px);
}

.nav-tab.nav-tab-active::before {
    opacity: 1;
}

/* Cards */
.menu-master-card {
    background: var(--mm-gradient-card);
    border: 1px solid var(--mm-border);
    border-radius: var(--mm-radius-xl);
    padding: 2rem;
    margin-bottom: 2rem;
    box-shadow: var(--mm-shadow-lg);
    transition: var(--mm-transition);
    position: relative;
    overflow: hidden;
}

.menu-master-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--mm-gradient-primary);
    opacity: 0;
    transition: var(--mm-transition);
}

.menu-master-card:hover {
    box-shadow: var(--mm-shadow-xl);
    transform: translateY(-2px);
}

.menu-master-card:hover::before {
    opacity: 1;
}

.menu-master-card h2,
.menu-master-card h3 {
    margin: 0 0 1.5rem 0;
    color: var(--mm-text-primary);
    font-weight: 600;
}

.menu-master-card h2 {
    font-size: 1.5rem;
}

.menu-master-card h3 {
    font-size: 1.25rem;
}

/* Grid System */
.menu-master-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: 1fr;
}

.menu-master-grid.grid-2 {
    grid-template-columns: repeat(2, 1fr);
}

.menu-master-grid.grid-3 {
    grid-template-columns: repeat(3, 1fr);
}

.menu-master-grid.grid-4 {
    grid-template-columns: repeat(4, 1fr);
}

@media (max-width: 1024px) {
    .menu-master-grid.grid-4 {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 768px) {
    .menu-master-grid.grid-2,
    .menu-master-grid.grid-3,
    .menu-master-grid.grid-4 {
        grid-template-columns: 1fr;
    }
}

/* Stats Cards */
.stats-card {
    background: var(--mm-gradient-card);
    border: 1px solid var(--mm-border);
    border-radius: var(--mm-radius-lg);
    padding: 2rem;
    text-align: center;
    box-shadow: var(--mm-shadow);
    transition: var(--mm-transition);
    position: relative;
    overflow: hidden;
}

.stats-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--mm-gradient-primary);
    opacity: 0;
    transition: var(--mm-transition);
}

.stats-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--mm-shadow-xl);
}

.stats-card:hover::before {
    opacity: 0.1;
}

.stats-card > * {
    position: relative;
    z-index: 1;
}

.stats-number {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--mm-text-primary);
    text-shadow: 0 2px 4px rgb(0 0 0 / 0.1);
}

.stats-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--mm-text-secondary);
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: var(--mm-radius);
    font-weight: 500;
    font-size: 0.875rem;
    cursor: pointer;
    transition: var(--mm-transition);
    text-decoration: none;
    box-shadow: var(--mm-shadow);
    position: relative;
    overflow: hidden;
    white-space: nowrap;
}

.btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s;
}

.btn:hover::before {
    left: 100%;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--mm-shadow-lg);
}

.btn:active {
    transform: translateY(0);
}

.btn-primary {
    background: var(--mm-gradient-primary);
    color: white;
    border: 1px solid var(--mm-primary);
}

.btn-primary:hover {
    color: white;
}

.btn-success {
    background: var(--mm-gradient-success);
    color: white;
    border: 1px solid var(--mm-success);
}

.btn-success:hover {
    color: white;
}

.btn-warning {
    background: var(--mm-gradient-warning);
    color: white;
    border: 1px solid var(--mm-warning);
}

.btn-warning:hover {
    color: white;
}

.btn-danger {
    background: var(--mm-gradient-danger);
    color: white;
    border: 1px solid var(--mm-danger);
}

.btn-danger:hover {
    color: white;
}

.btn-secondary {
    background: var(--mm-bg-elevated);
    color: var(--mm-text-primary);
    border: 1px solid var(--mm-border);
}

.btn-secondary:hover {
    background: var(--mm-bg-hover);
    color: var(--mm-text-primary);
}

.btn-sm {
    padding: 0.5rem 1rem;
    font-size: 0.75rem;
}

.btn-lg {
    padding: 1rem 2rem;
    font-size: 1rem;
}

/* Form Elements */
.form-field {
    margin-bottom: 1.5rem;
}

.form-label {
    display: block;
    font-weight: 500;
    color: var(--mm-text-primary);
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
}

.form-input,
.form-textarea,
.form-select {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid var(--mm-border);
    border-radius: var(--mm-radius);
    background: var(--mm-bg-input);
    color: var(--mm-text-primary);
    font-size: 0.875rem;
    transition: var(--mm-transition);
    box-shadow: var(--mm-shadow-sm);
}

.form-input:focus,
.form-textarea:focus,
.form-select:focus {
    outline: none;
    border-color: var(--mm-border-focus);
    box-shadow: 0 0 0 3px rgb(79 70 229 / 0.1), var(--mm-shadow);
    background: var(--mm-bg-card);
}

.form-input::placeholder,
.form-textarea::placeholder {
    color: var(--mm-text-muted);
}

.form-help {
    font-size: 0.75rem;
    color: var(--mm-text-muted);
    margin-top: 0.25rem;
}

.form-help.error {
    color: var(--mm-danger);
}

.form-help.success {
    color: var(--mm-success);
}

/* Tables */
.data-table {
    width: 100%;
    background: var(--mm-bg-card);
    border-radius: var(--mm-radius-lg);
    overflow: hidden;
    box-shadow: var(--mm-shadow);
    border: 1px solid var(--mm-border);
}

.data-table th,
.data-table td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid var(--mm-border);
}

.data-table th {
    background: var(--mm-bg-elevated);
    font-weight: 600;
    color: var(--mm-text-primary);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.025em;
}

.data-table td {
    color: var(--mm-text-secondary);
    font-size: 0.875rem;
}

.data-table tbody tr {
    transition: var(--mm-transition);
}

.data-table tbody tr:hover {
    background: var(--mm-bg-elevated);
}

.data-table tbody tr:last-child td {
    border-bottom: none;
}

/* Tags */
.tag {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
    background: var(--mm-bg-elevated);
    color: var(--mm-text-secondary);
    border: 1px solid var(--mm-border);
}

.tag.primary {
    background: rgb(79 70 229 / 0.1);
    color: var(--mm-primary);
    border-color: var(--mm-primary);
}

.tag.success {
    background: rgb(16 185 129 / 0.1);
    color: var(--mm-success);
    border-color: var(--mm-success);
}

.tag.warning {
    background: rgb(245 158 11 / 0.1);
    color: var(--mm-warning);
    border-color: var(--mm-warning);
}

.tag.danger {
    background: rgb(239 68 68 / 0.1);
    color: var(--mm-danger);
    border-color: var(--mm-danger);
}

/* Notifications */
.notification {
    padding: 1rem 1.5rem;
    border-radius: var(--mm-radius);
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    box-shadow: var(--mm-shadow);
    border: 1px solid var(--mm-border);
}

.notification.success {
    background: rgb(16 185 129 / 0.1);
    border-color: var(--mm-success);
    color: var(--mm-success);
}

.notification.warning {
    background: rgb(245 158 11 / 0.1);
    border-color: var(--mm-warning);
    color: var(--mm-warning);
}

.notification.error {
    background: rgb(239 68 68 / 0.1);
    border-color: var(--mm-danger);
    color: var(--mm-danger);
}

.notification.info {
    background: rgb(59 130 246 / 0.1);
    border-color: var(--mm-info);
    color: var(--mm-info);
}

/* Progress Bars */
.progress-container {
    background: var(--mm-bg-elevated);
    border-radius: var(--mm-radius);
    height: 0.5rem;
    overflow: hidden;
    margin: 1rem 0;
    box-shadow: inset 0 2px 4px rgb(0 0 0 / 0.1);
}

.progress-bar {
    height: 100%;
    background: var(--mm-gradient-primary);
    border-radius: var(--mm-radius);
    transition: width 0.3s ease;
    position: relative;
    overflow: hidden;
}

.progress-bar::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    animation: shimmer 2s infinite;
}

@keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}

/* Image Manager */
.image-manager {
    background: var(--mm-bg-card);
    border-radius: var(--mm-radius-xl);
    overflow: hidden;
    box-shadow: var(--mm-shadow-lg);
    border: 1px solid var(--mm-border);
}

.image-manager-toolbar {
    padding: 1.5rem;
    border-bottom: 1px solid var(--mm-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    background: var(--mm-bg-elevated);
}

.image-manager-controls {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.view-toggle {
    display: flex;
    background: var(--mm-bg-card);
    border-radius: var(--mm-radius);
    padding: 0.25rem;
    border: 1px solid var(--mm-border);
}

.view-toggle button {
    padding: 0.5rem 1rem;
    border: none;
    background: transparent;
    border-radius: var(--mm-radius-sm);
    cursor: pointer;
    transition: var(--mm-transition);
    color: var(--mm-text-secondary);
    font-size: 0.875rem;
}

.view-toggle button.active {
    background: var(--mm-gradient-primary);
    color: white;
    box-shadow: var(--mm-shadow-sm);
}

.grid-size-selector select {
    padding: 0.5rem 1rem;
    border: 1px solid var(--mm-border);
    border-radius: var(--mm-radius);
    background: var(--mm-bg-input);
    color: var(--mm-text-primary);
    font-size: 0.875rem;
}

/* Image Grid */
.image-grid-view {
    padding: 1.5rem;
    display: grid;
    gap: 1rem;
}

.image-grid-view.grid-5 {
    grid-template-columns: repeat(5, 1fr);
}

.image-grid-view.grid-7 {
    grid-template-columns: repeat(7, 1fr);
}

.image-grid-view.grid-10 {
    grid-template-columns: repeat(10, 1fr);
}

.image-grid-item {
    background: var(--mm-bg-elevated);
    border-radius: var(--mm-radius-lg);
    overflow: hidden;
    transition: var(--mm-transition);
    border: 1px solid var(--mm-border);
    box-shadow: var(--mm-shadow);
}

.image-grid-item:hover {
    transform: translateY(-4px);
    box-shadow: var(--mm-shadow-xl);
}

.image-grid-item img {
    width: 100%;
    height: 120px;
    object-fit: cover;
}

.image-grid-item .image-name {
    padding: 0.75rem;
    font-size: 0.75rem;
    color: var(--mm-text-secondary);
    text-align: center;
    font-weight: 500;
}

/* Upload Area */
.upload-area {
    border: 2px dashed var(--mm-border);
    border-radius: var(--mm-radius-lg);
    padding: 3rem;
    text-align: center;
    background: var(--mm-bg-elevated);
    transition: var(--mm-transition);
    cursor: pointer;
}

.upload-area:hover {
    border-color: var(--mm-primary);
    background: var(--mm-bg-card);
}

.upload-area.dragover {
    border-color: var(--mm-primary);
    background: rgb(79 70 229 / 0.05);
}

/* Modal Styles */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: var(--mm-transition);
    backdrop-filter: blur(4px);
}

.modal.is-active {
    opacity: 1;
    visibility: visible;
}

.modal-card {
    background: var(--mm-bg-card);
    border-radius: var(--mm-radius-xl);
    max-width: 90vw;
    max-height: 90vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    box-shadow: var(--mm-shadow-xl);
    border: 1px solid var(--mm-border);
    transform: scale(0.9);
    transition: var(--mm-transition);
}

.modal.is-active .modal-card {
    transform: scale(1);
}

.modal-card-head {
    background: var(--mm-bg-elevated);
    padding: 1.5rem 2rem;
    border-bottom: 1px solid var(--mm-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.modal-card-title {
    font-weight: 600;
    color: var(--mm-text-primary);
    margin: 0;
    font-size: 1.25rem;
}

.modal-card-body {
    padding: 2rem;
    overflow: auto;
    flex: 1;
}

.modal-card-foot {
    background: var(--mm-bg-elevated);
    padding: 1.5rem 2rem;
    border-top: 1px solid var(--mm-border);
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
}

.delete {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--mm-text-muted);
    transition: var(--mm-transition);
    border-radius: var(--mm-radius);
    padding: 0.25rem;
}

.delete:hover {
    color: var(--mm-danger);
    background: rgb(239 68 68 / 0.1);
}

/* Control and Field Styles */
.control {
    position: relative;
}

.field {
    margin-bottom: 1.5rem;
}

.label {
    display: block;
    font-weight: 500;
    color: var(--mm-text-primary);
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
}

/* Table Container */
.table-container {
    overflow-x: auto;
    border-radius: var(--mm-radius-lg);
    border: 1px solid var(--mm-border);
    box-shadow: var(--mm-shadow);
}

/* Image Thumbnail */
.image-thumbnail {
    width: 40px;
    height: 40px;
    object-fit: cover;
    border-radius: var(--mm-radius);
    border: 1px solid var(--mm-border);
    transition: var(--mm-transition);
    box-shadow: var(--mm-shadow-sm);
}

.image-thumbnail:hover {
    transform: scale(3);
    z-index: 1000;
    position: relative;
    box-shadow: var(--mm-shadow-xl);
    border-radius: var(--mm-radius-lg);
}

/* Settings Sections */
.settings-section {
    background: var(--mm-bg-card);
    border: 1px solid var(--mm-border);
    border-radius: var(--mm-radius-xl);
    padding: 2rem;
    margin-bottom: 2rem;
    box-shadow: var(--mm-shadow);
}

.settings-section-header h3 {
    color: var(--mm-text-primary);
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
}

.settings-section-description {
    color: var(--mm-text-muted);
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
}

.settings-fields-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(2, 1fr);
}

.settings-field-group.full-width {
    grid-column: 1 / -1;
}

.settings-field-label {
    display: block;
    font-weight: 500;
    color: var(--mm-text-primary);
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
}

.settings-field-input,
.settings-field-textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid var(--mm-border);
    border-radius: var(--mm-radius);
    background: var(--mm-bg-input);
    color: var(--mm-text-primary);
    font-size: 0.875rem;
    transition: var(--mm-transition);
}

.settings-field-input:focus,
.settings-field-textarea:focus {
    outline: none;
    border-color: var(--mm-border-focus);
    box-shadow: 0 0 0 3px rgb(79 70 229 / 0.1);
}

.field-hint {
    font-size: 0.75rem;
    color: var(--mm-text-muted);
    margin-top: 0.5rem;
}

/* Progress Steps */
.creation-progress {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 2rem 0;
    padding: 2rem;
    background: var(--mm-bg-card);
    border-radius: var(--mm-radius-lg);
    border: 1px solid var(--mm-border);
}

.progress-step {
    display: flex;
    align-items: center;
    gap: 1rem;
    opacity: 0.5;
    transition: var(--mm-transition);
}

.progress-step.active {
    opacity: 1;
}

.step-number {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    background: var(--mm-bg-elevated);
    border: 2px solid var(--mm-border);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    color: var(--mm-text-secondary);
}

.progress-step.active .step-number {
    background: var(--mm-gradient-primary);
    border-color: var(--mm-primary);
    color: white;
}

.step-info {
    text-align: left;
}

.step-title {
    font-weight: 600;
    color: var(--mm-text-primary);
    margin-bottom: 0.25rem;
}

.step-description {
    font-size: 0.875rem;
    color: var(--mm-text-muted);
}

.progress-separator {
    width: 3rem;
    height: 2px;
    background: var(--mm-border);
    margin: 0 1rem;
}

/* Responsive Design */
@media (max-width: 1024px) {
    .image-grid-view.grid-7,
    .image-grid-view.grid-10 {
        grid-template-columns: repeat(5, 1fr);
    }
    
    .settings-fields-grid {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 768px) {
    .menu-master-header {
        padding: 1rem;
        flex-direction: column;
        gap: 1rem;
    }
    
    .nav-tabs {
        flex-wrap: wrap;
    }
    
    .image-grid-view.grid-5,
    .image-grid-view.grid-7,
    .image-grid-view.grid-10 {
        grid-template-columns: repeat(3, 1fr);
    }
    
    .image-manager-toolbar {
        flex-direction: column;
        align-items: stretch;
    }
    
    .creation-progress {
        flex-direction: column;
        gap: 1rem;
    }
    
    .progress-separator {
        width: 2px;
        height: 2rem;
        margin: 0.5rem 0;
    }
}

@media (max-width: 480px) {
    .image-grid-view.grid-5,
    .image-grid-view.grid-7,
    .image-grid-view.grid-10 {
        grid-template-columns: repeat(2, 1fr);
    }
}

/* Utility Classes */
.text-center { text-align: center; }
.text-right { text-align: right; }
.text-left { text-align: left; }

.text-primary { color: var(--mm-text-primary); }
.text-secondary { color: var(--mm-text-secondary); }
.text-muted { color: var(--mm-text-muted); }
.text-success { color: var(--mm-success); }
.text-warning { color: var(--mm-warning); }
.text-danger { color: var(--mm-danger); }
.text-info { color: var(--mm-info); }

.mb-0 { margin-bottom: 0; }
.mb-1 { margin-bottom: 0.5rem; }
.mb-2 { margin-bottom: 1rem; }
.mb-3 { margin-bottom: 1.5rem; }
.mb-4 { margin-bottom: 2rem; }

.mt-0 { margin-top: 0; }
.mt-1 { margin-top: 0.5rem; }
.mt-2 { margin-top: 1rem; }
.mt-3 { margin-top: 1.5rem; }
.mt-4 { margin-top: 2rem; }

.p-0 { padding: 0; }
.p-1 { padding: 0.5rem; }
.p-2 { padding: 1rem; }
.p-3 { padding: 1.5rem; }
.p-4 { padding: 2rem; }

.flex { display: flex; }
.block { display: block; }
.hidden { display: none; }
.inline-flex { display: inline-flex; }

.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.justify-end { justify-content: flex-end; }

.items-center { align-items: center; }
.items-start { align-items: flex-start; }
.items-end { align-items: flex-end; }

.w-full { width: 100%; }
.h-full { height: 100%; }

.gap-1 { gap: 0.25rem; }
.gap-2 { gap: 0.5rem; }
.gap-3 { gap: 0.75rem; }
.gap-4 { gap: 1rem; }

.rounded { border-radius: var(--mm-radius); }
.rounded-lg { border-radius: var(--mm-radius-lg); }
.rounded-xl { border-radius: var(--mm-radius-xl); }

.shadow { box-shadow: var(--mm-shadow); }
.shadow-lg { box-shadow: var(--mm-shadow-lg); }
.shadow-xl { box-shadow: var(--mm-shadow-xl); }

/* Loading States */
.loading {
    position: relative;
    overflow: hidden;
}

.loading::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    animation: loading 1.5s infinite;
}

@keyframes loading {
    0% { left: -100%; }
    100% { left: 100%; }
}

/* Custom Scrollbar */
::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}

::-webkit-scrollbar-track {
    background: var(--mm-bg-elevated);
    border-radius: var(--mm-radius);
}

::-webkit-scrollbar-thumb {
    background: var(--mm-border);
    border-radius: var(--mm-radius);
}

::-webkit-scrollbar-thumb:hover {
    background: var(--mm-border-light);
} 